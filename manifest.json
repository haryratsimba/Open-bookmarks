{
    "manifest_version": 2,
    "name": "Bookmarks bar",
    "version": "0.1",
    "description": "Bookmarks navigator bar",
    "icons" : {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "browser_action": {
        "default_icon": "assets/icon128.png",
        "default_title": "Bookmarks search",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["libs/jquery.min.js", "background.js"]
    },
    "permissions": ["background", "bookmarks", "tabs", "activeTab", "chrome://favicon/"],
    "web_accessible_resources": [
        "fonts/*"
    ]
}